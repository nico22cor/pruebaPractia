@model IEnumerable<Prueba_Practia.Models.Invoice>

@{
    ViewBag.Title = "Details";
}

<h2>Details client id: @Html.DisplayFor(modelItem => Model.First().ClientId)</h2>


<div>
    <table class="table">
        <tr class="headtable">
            <th>
                @Html.DisplayNameFor(model => model.InvoiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paid)
            </td>
            <td>

                @Html.ActionLink("InvoiceDetails", "InvoiceDetails", new { id = item.InvoiceId })
            </td>
        </tr>
        }

    </table>
</div>